<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

 <table name="employee_details">

 <column xsi:type="int" name="entity_id" padding="20"  identity="true" nullable="false" comment="ID" />

 <column xsi:type="varchar" name="emp_id" length="25" nullable="false" comment="Employee ID" />

 <column xsi:type="varchar" name="first_name" length="100" nullable="false" comment="Employee First Name" />

 <column xsi:type="varchar" name="last_name" length="100" nullable="false" comment="Employee Last Name" />

 <column xsi:type="varchar" name="email" length="100" nullable="false" comment="Employee Email ID" />

 <column xsi:type="varchar" name="mobile_number" length="100" nullable="false" comment="Employee Mobile Number" />

 <column xsi:type="varchar" name="company_name" length="100" nullable="false" comment="Employee Company Name" />

 <column xsi:type="varchar" name="department" length="100" nullable="false" comment="Employee Department" />

 <column xsi:type="varchar" name="occupation" length="100" nullable="false" comment="Employee Department" />

 <column xsi:type="text" name="address" nullable="false" comment="Employee Address" />

 <column xsi:type="date" name="joining_date" nullable="false" comment="Employee Joining Date" />

 <column xsi:type="date" name="date_of_birth" nullable="false" comment="Employee Date of Birth" />
    
 <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="false" comment="Created Date and Time"/>

 <column xsi:type="timestamp" name="updated_at" nullable="true" default="CURRENT_TIMESTAMP" on_update="true" comment="Updated Date and Time"/>

 <constraint xsi:type="primary" referenceId="PRIMARY">

 <column name="entity_id" />

 </constraint>

 </table>

</schema>
